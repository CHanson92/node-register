extends layout

block content
    - data = data || {};

    if errors
        ul.my-errors
            each error in errors
                li= error.msg

    form.form-registration(action='.', method='POST')
        label(for='name') Name:
        input#name.form-control(type='text', name='name', value=data.name)

        label(for='email') Email:
        input#email.form-control(
            type='email',
            name='email',
            value=data.email
        )

        input.btn.btn-lg.btn-primary.btn-block(
            type='submit',
            value='Submit'
        )
